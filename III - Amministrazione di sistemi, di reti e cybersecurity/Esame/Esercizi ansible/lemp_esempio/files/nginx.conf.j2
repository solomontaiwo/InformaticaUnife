server {
        listen 80;
        listen [::]:80;
        server_name {{ http_host }};
        root /var/www/{{ http_host }};

	index index.php index.html index.htm;
        
	location / {
                try_files $uri $uri/ =404;
        }

        location ~ \.php$ {
                include snippets/fastcgi-php.conf;
                fastcgi_pass unix:/var/run/php/php8.2-fpm.sock;
        }

        location ~ /\.ht {
                deny all;
        }
}
