# Esercizio firewall

# politica di default
iptables -F # flush delle regole sulla t filter
iptables -P INPUT DROP

# abilitare traffico in INPUT SSH porta 4022 (traffico in 
# su wlan0)
iptables -A INPUT -i wlan0 -p tcp --dport 4022 -j ACCEPT

# http e https
iptables -A INPUT -p tcp --dport 80 -j ACCEPT
iptables -A INPT -p tcp --dport 443 -j ACCEPT
(alternativa) sudo iptables -A INPUT -p tcp \
     -m multiport --dports 80,443 -j ACCEPT
iptables -A INPUT -p udp --dport 443 -j ACCEPT


